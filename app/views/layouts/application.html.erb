<!DOCTYPE html>
<html>
<head>
  <title>Instant Noodle</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=Roboto:500,400,300' rel='stylesheet' type='text/css'>


  <script type="text/javascript">
    $(document).ready(function() {
        $(".sign-in-up-wrapper").css("display", "none");
        $(".sign-in-up-wrapper").fadeIn(1300);
    });
  </script>

  <script src="https://widget.cloudinary.com/global/all.js" type="text/javascript"></script>

  <script type="text/javascript">
    window.cloudinary_options = {
      cloud_name: '<%= ENV['CLOUD_NAME']%>',
      upload_preset: '<%= ENV['UPLOAD_PRESET']%>',
      multiple: false,
      theme: 'minimal',
      thumbnail_transformation: "f_auto/q_50"
    };
  </script>
</head>
<body>

<%= yield %>


<!-- Demo Login -->
<script type="text/javascript">
  $(".demo").click(function(event){
    event.preventDefault();

    var usernameCount = 0; //max length 5
    var passwordCount = 0; //max length 8

    var usernameText = "guest";
    var passwordText = "password";

    var username = $("#username");
    var password = $("#password");

    var interval = setInterval(function(){
      if (usernameCount < 5) {
        username.val(usernameText.substring(0,usernameCount+1));
        usernameCount++;
      } else if (passwordCount < 8) {
        password.val(passwordText.substring(0,passwordCount+1));
        passwordCount++;
      } else {
        $("form").submit();
        clearInterval(interval);
      }
    }, 75);
  });
</script>

</body>
</html>
