/* HEADER */

.header {
  display: block;
  height: 100%;
  padding: 20px 0 20px 0;
  border-bottom: 1px solid #eeefef;

  font-family: "Roboto", "Helvetica Neue", sans-serif;
}
.header-nav {
  width: 80%;
  margin: auto;
  display: flex;
  justify-content: space-between;
}
.header-nav-menu {
  padding-left: 69px;
}
.header-menu-search {
  width: 20%;
  text-align: center;
  margin: 0 auto;
  margin-bottom: -25px;
  padding-top: 5px;
}
.user-search {
  position: relative;
}
.search-form input {
  margin: 0;
  padding: 0 14px;
  border-radius: 20px;
  border: 1px solid #e1e3e3;
  width: 75%;
  height: 28px;
  font-size: 13px;
  font-weight: 300;
  background-color: #fafafa;
}
.search-form ::-webkit-input-placeholder {
   text-align: center;
   color: #81848f;
   font-size: 13px;
}
.search-form :-moz-placeholder { /* Firefox 18- */
   text-align: center;  
   color: #81848f;
   font-size: 13px;
}
.search-form ::-moz-placeholder {  /* Firefox 19+ */
   text-align: center;  
   color: #81848f;
   font-size: 13px;
}
.search-form :-ms-input-placeholder {  
   text-align: center;
   color: #81848f; 
   font-size: 13px;
}
.user-search-index {
  visibility: hidden;
  /*transition: visibility 1s ease;*/
  position: absolute;
  border: 1px solid #e1e3e3;
  background: white;
  width: 100%;
  padding: 1px;
  top: 42px;
  border-radius: 5px;
  box-shadow: 0px 0px 6px lightgray;
}
.user-search-item {
  padding: 9px;
  border-bottom: 1px solid #e1e3e3;
}
.user-search-item:hover{
  background-color: #fafafa;
  -moz-transition: all .15s ease-in;
  -o-transition: all .15s ease-in;
  -webkit-transition: all .15s ease-in;
  transition: background .15s ease-in;
}
.user-search-item h3 {
  color: #d31f28;
  margin-bottom: 3px;
}
.user-search-item p {
  font-size: 14px;
  color: grey;

}
.user-search-item:last-child{
  border-bottom: none;
}
.show-results {
  visibility: visible;
}

.header-list-item-user {
  float: left;
  margin: 9px 25px 0 0;
  color: #d31f28;
  font-size: 18px;
}
.header-list-item-sign-out {
  float: left;
}
.header-list-item-sign-out button {
  width: 6em;
  height: 30px;
  margin-top: 5px;
  border: 1px solid lightgrey;
  border-radius: 4px;
  padding: 4px;

  background-color: #d31f28;
  color: white;
  opacity: 1;

  text-align: center;
  font-size: 13px;
  font-weight: 500;

}
.header-list-item-sign-out button:hover{
  background-color: #e60c17;
  cursor: pointer;
}




/* MAIN */

#main {
  font-family: "Roboto", "Helvetica Neue", sans-serif;
  background-color: #fafafa;
}

.post-index {
  display: flex;
  flex-direction: column;
  align-items: center;

  max-width: 1440px;
  padding-top: 65px;
  margin: auto;
}

.post {
  min-width: 450px;
  width: 42%;
  border: 1px solid #eeefef;
  border-radius: 3px;
  margin-bottom: 65px;

  background-color: white;
}

#post-author {
  width: 10%;
  padding: 20px 0 20px 25px;
  float: left;

  color: #d31f28;
  font-family: "Roboto", "Helvetica Neue", sans-serif;
  font-size: 16px;
  font-weight: 500;
}
.post-header ul{
  padding: 20px 25px 20px 25px;
  float: right;
}
#post-age {
  float: left;
  color: #a5a7aa;
  font-size: 15px;
  font-weight: normal;
}
.post-image{
  width: 100%;
  border-top: 1px solid #eeefef;
  border-bottom: 1px solid #eeefef;
}
.like-edit-wrapper button {

  margin: -21px 25px 0px 0px;
  float: right;
  width: 75px;
  height: 24px; 
  font-weight: normal;
  font-size: 12px;
  color: #d31f28;
  border: 1px solid #eeefef;
  background-color: white;

}
.like-edit-wrapper button:hover{
  color: #e60c17;
  transition: all 0.5s ease 0s;
  border: 1px solid #e60c17;
  background-color: white;
}
.post p span{
  margin-right: 5px;
  color: #d31f28;
  font-family: "Roboto", "Helvetica Neue", sans-serif;
  font-weight: 500;
}
.post p {
  padding: 10px 25px 5px 25px;
  font-size: 14px;
}
.post section {
  height: 6px;
}

.post hr {
  width: 91.4%;
  border: 1px solid #eeefef;
  border-bottom: 0px;
  margin-top:17px;
  margin-bottom: 0px;
}

/* COMMENTS */


.post-bottom li:first-child {
  float: left;
  width: 53px;
}
.post-bottom li:last-child {
  float: left;
  width: 75%
}
.comment {
  -moz-transition: all .15s ease-in;
  -o-transition: all .15s ease-in;
  -webkit-transition: all .15s ease-in;
  transition: background .15s ease-in;
  background-color: #fff;
}
.comment:hover {
  -moz-transition: all .15s ease-in;
  -o-transition: all .15s ease-in;
  -webkit-transition: all .15s ease-in;
  transition: background .15s ease-in;
  background-color: #fbe3e4;
}
.comment p {
  position: relative;
  padding: 5px 50px 5px 25px ; 
  word-wrap: break-word;
}
.deletable {
  position:absolute;
  top:4px;
  right:16px;
  color: grey;
  border-radius: 10px;
  background-color: white;
  border: 1px solid lightgrey;
}
.deletable:hover{
  cursor: pointer;
}
button.deletable:focus{
  border-radius: 10px;
  background-color: white;
  border: 1px solid lightgrey;
  outline: none;

}
.comment-form {
  float: left;
  width: 100%;
  margin: 11px 0 11px 10px;
}
.comment-form input {
  border: none;
  width:95%;
  padding: 10px;
  font-weight: 400;
  font-family: "Roboto", "Helvetica Neue", sans-serif;
  font-size: 14px;
  color: black;
}


/* LIKES */

.like-counter-wrapper {
  margin: 20px 0 0 25px;
  color: #4b4f54;
  font-size: 15px;
}
.like-button {
  margin: 17px 0px 0px 25px;
  padding: 0;
  background-color: white;
  border: none;
}


/* MODAL TRANSITIONS */

.fade-appear {
  opacity: 0;
  transition: opacity .5s ease-in;
}
 
.fade-appear.fade-appear-active {
  opacity: 1;
}
 
.fade-leave {
  opacity: 1;
  transition: opacity .5s ease-in;
}
 
.fade-leave.fade-leave-active {
  opacity: 0;
}

/* CREATE & EDIT POST */

