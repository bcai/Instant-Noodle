/* RESET */

html, body, section, article, h1, h2, h3, p, strong, em, a, div, ul {
  margin: 0;
  border: 0;
  padding: 0;
  outline: 0;
  box-sizing: inherit;
  font: inherit;
  text-align: inherit;
  text-decoration: inherit;
  color: inherit;
  background: transparent;
}
button {
  outline: none;
}
input:focus {
  outline: none;
}

/* SHARED */

html{
  height: 100%;
}
body {
  position: absolute;
  width: 100%;
  min-height: 100%;
  min-width: 700px;
}

ul {
  list-style-type: none; 
}

.index-appear {
  opacity: 0.01;
}

.index-appear.index-appear-active {
  opacity: 1;
  transition: opacity 0.5s ease-in;
}

.submit-button {
  width: 15.9em;
  height: 30px;
  border: 1px solid lightgrey;
  border-radius: 4px;
  padding: 4px;
  margin: 0 2px 0 0;

  background-color: #d31f28;
  color: white;
  opacity: 1;

  text-align: center;
  font-size: 13px;
  font-weight: 500;
}
.submit-button:hover{
  background-color: #e60c17;
  cursor:pointer;
}

/* UTILS */

.group:after {
  content: "";
  display: block;
  clear: both;
}




/* SIGN IN & SIGN UP PAGES */

