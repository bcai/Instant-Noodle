/* RESET */

html, body, section, article, h1, h2, h3, p, strong, em, a, div, ul{
  margin: 0;
  border: 0;
  padding: 0;
  outline: 0;
  box-sizing: inherit;
  font: inherit;
  text-align: inherit;
  text-decoration: inherit;
  color: inherit;
  background: transparent;
}

/* SHARED */

html{
  height: 100%;
}
body {
  position: absolute;
  width: 100%;
  min-height: 100%;
}

ul {
  list-style-type: none; 
}

/* UTILS */

.group:after {
  content: "";
  display: block;
  clear: both;
}

/* SIGN IN & SIGN UP PAGES */

.sign-in-up-wrapper {
  position: absolute;
  width: 100%;
  height: 100%;
  background: url('<%= asset_path("background.jpg") %>') no-repeat center center fixed; 
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
}

.sign-in-up {
  width: 30em;
  
  margin: auto;
  margin-top: 15em;

  text-align: center;
  font-family: Helvetica Neue;
  font-size: 14px;
}
.sign-in-up img{
  margin-bottom: 5%;
}
.sign-in-up li {
  padding: 0 1em 0 1em;
  font-size: 13px;
  color: #d31f28;
}
.sign-in-up li:first-child {
  padding-top: 1.5em;
}


#form-section {
  border: 1px solid grey;
  border-radius: 1px;
  padding: 8%;
  margin-bottom: 5%;

  background-color: rgba(255,255,255, 0.85);
}
.form-box {
  width: 15em;
  height: 20px;
  border: 1px solid lightgrey;
  border-radius: 4px;
  padding: 4px;
  margin-bottom: 2%;

  font-size: 13px;
  opacity: 1;
}
.submit-button {
  width: 15.9em;
  height: 30px;
  border: 1px solid lightgrey;
  border-radius: 4px;
  padding: 4px;
  margin: 0 2px 0 0;

  background-color: #d31f28;
  color: white;
  opacity: 1;

  text-align: center;
  font-size: 13px;
  font-weight: 600;
}
.submit-button:hover{
  background-color: #e60c17;
  cursor:pointer;
}

#link-section {
  border: 1px solid grey;
  border-radius: 2px;
  padding: 5%;

  background-color: white;
  opacity: 0.85;
}
#link-section a{
  color: #d31f28;
}








/* MAIN WRAPPER */

.main-wrapper {

}


/* HEADER */

.header {
  display: block;
  height: 100%;
  padding: 20px 0 20px 0;

  font-family: sans-serif;
}

.header-nav {
  width: 80%;
  margin: auto;
}

.header-nav-logo {
  float: left;
  width: 24%;
}
/*.header-nav-logo a{
  content:url("/assets/logo.png");
}
*/

.header-nav-menu {
  width: 70%;
  float: right;
}

.header-nav-menu-list {
  float: right;
}
.header-menu-search {
  width: 20%;
  float: left;
  padding-left: 20%;

  /* placeholder text only  - safe for delete */
  text-align: center;
}
.header-list-item-user {
  float: left;
  margin: 12px 12px 0 0;
  color: #d31f28;
}
.header-list-item-sign-out {
  float: left;
}
.header-list-item-sign-out button {
  width: 6em;
  height: 30px;
  margin-top: 5px;
  border: 1px solid lightgrey;
  border-radius: 4px;
  padding: 4px;

  background-color: #d31f28;
  color: white;
  opacity: 1;

  text-align: center;
  font-size: 13px;
  font-weight: 400;

}
.header-list-item-sign-out button:hover{
  background-color: #e60c17;
  cursor: pointer;
}




/* MAIN */

#main {
  font-family: sans-serif;
  background-color: #fafafa;
}

.post-index {
  display: flex;
  flex-direction: column;
  align-items: center;

  padding-top: 65px;
}

.post {
  width: 42%;
  border: 1px solid lightgrey;
  border-radius: 2px;
  margin-bottom: 65px;

  background-color: white;
}
.post h3 {
  padding: 20px 0 20px 25px;

  color: #d31f28;
  font-family: Helvetica Neue;
  font-size: 14px;
  font-weight: bold;
}
.post img{
  width: 100%;
}
.post button{
  float: right;
}
.post p span{
  margin-right: 5px;
  color: #d31f28;
  font-family: Helvetica Neue;
  font-weight: bold;
}
.post p {
  padding: 20px 0 10px 25px;
  font-size: 14px;
}





/* EDIT POST */

.modal {
  display: flex;
  flex-direction: column;
  align-items: center;

  width: 350px;
  height: 400px;

  margin: auto;
  margin-top: 10%;
  border: 1px solid lightgrey;
  border-radius: 3px;

  background-color: white;
}
.modal-form-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
}
#post-form {
  display: flex;
  flex-direction: column;
  align-items: center;
}