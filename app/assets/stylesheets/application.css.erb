  margin-bottom: 6%;
  border: 1px solid grey;
  border-radius: 2px;
  padding: 1em;

  font-size: 14px;
}
.close-button {
  width: 5.5em;
  margin-top: 3%;
  border: none;
  border-radius: 100px;

  font-size: 14px;
  color: #d31f28;
  background-color: white;
}
.close-button:hover {
  background-color: white;
  color: #d31f28;
}

.create-button {
  position: fixed;
  bottom: 0;
  right: 0;
  z-index: 0;

  width: 78px;
  height: 74px;
  margin-bottom: 59px;
  margin-right: 10%;
  border: none;

  background-color: transparent;
}
.create-button img {
  z-index: 0;
}
.create-button:hover{
  cursor: pointer;
}


